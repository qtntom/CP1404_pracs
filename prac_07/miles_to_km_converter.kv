BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_text
            font_size: 40
            background_color: (100,100,100,100)
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press:
                    app.handle_increment(1)
                    app.handle_conversion()
            Button:
                text: 'Down'
                on_press:
                    app.handle_increment(-1)
                    app.handle_conversion()
#    Button:
#        text: 'Convert Miles to Km'
#        on_press: app.handle_conversion()
    Label:
        font_size: 40
        color: (1, 1, 0, 1)
        text: app.result