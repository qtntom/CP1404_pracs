BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .2
        background_color: (0,0,1,1)
        Label:
            text: 'Celsius'
        Label:
            color: (0,1,0,.8)
            text: 'Fahrenheit'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: celcius_value
            multiline: False
            background_color: (10,10,10,1)
            font_size: 40
            text: app.celcius
            on_text_validate: app.convert_to_fahra(celcius_value.text)
        TextInput:
            id: fahra_value
            multiline: False
            background_color: (0,1,0,.8)
            font_size: 40
            text: app.fahra
            on_text_validate: app.convert_to_celcius()