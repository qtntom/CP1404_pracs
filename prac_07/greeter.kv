BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        size_hint_x: app.SIZE_MARGIN
        orientation: 'vertical'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: input_name
            font_size: 40
            text: ''
        Label:
            id: output_label
            text: 'Enter your name'
            font_size: 40
            color: (1, 1, 0, 1)